    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="27,61,0,0" VerticalAlignment="Top"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="201,61,0,0" VerticalAlignment="Top"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="401,61,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
